@{
    ViewData["Title"] = "Login";
    var returnUrl = ViewBag.ReturnUrl as string;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<div class="container-caja mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow-sm rounded-4">
                <div class="card-body">
                    <h3 class="card-title mb-4 text-center" style="color: var(--color-1);">Iniciar Sesión</h3>

                    @if (ViewBag.Mensaje != null)
                    {
                        <div class="alert alert-warning">@ViewBag.Mensaje</div>
                    }

                    <form asp-action="Login" method="post">
                        <input type="hidden" name="returnUrl" value="@returnUrl" />

                        <div class="mb-3">
                            <label for="codigo" class="form-label">Código de Usuario</label>
                            <input type="text" name="codigo" class="form-control" id="codigo" placeholder="Ingrese su código" required />
                        </div>

                        <div class="mb-3">
                            <label for="contrasena" class="form-label">Contraseña</label>
                            <input type="password" name="contrasena" class="form-control" id="contrasena" placeholder="Ingrese su contraseña" required />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-agregar">Iniciar Sesión</button>
                        </div>
                    </form>

                    <div class="mt-3 text-center">
                        <small>© 2025 SurferPets</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

