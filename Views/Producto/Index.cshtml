<div class="container mt-4">
    <h2 class="mb-4 text-primary">üì¶ Listado de Productos</h2>

    <a class="btn btn-success mb-3" asp-action="Agregar" asp-controller="Producto">‚ûï Agregar Producto</a>

    <table class="table table-bordered table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Producto</th>
                <th>Marca</th>
                <th>Descripci√≥n</th>
                <th>EAN</th>
                <th>SKU</th>
                <th>Precio Compra</th>
                <th>IVA</th>
                <th>Precio Total</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
