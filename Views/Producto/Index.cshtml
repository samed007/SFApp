                    <td>@p.Producto</td>
                    <td>@p.Marca</td>
                    <td>@p.Descripcion</td>
                    <td>@p.EAN</td>
                    <td>@p.SKU</td>
                    <td>@p.PrecioCompra.ToString("0.00") ‚Ç¨</td>
                    <td>@p.IVA.ToString("0.00")%</td>
                    <td>@p.PrecioTotal.ToString("0.00") ‚Ç¨</td>
                    <td>
                        <a class="btn btn-sm btn-warning mb-1" asp-action="Editar" asp-route-idProducto="@p.IdProducto">‚úèÔ∏è Editar</a>
                        
                        <form asp-action="Eliminar" asp-controller="Producto" method="post" style="display:inline;" onsubmit="return confirm('¬øSeguro que quieres eliminar este producto?');">
                            <input type="hidden" name="idProducto" value="@p.IdProducto" />
                            <button type="submit" class="btn btn-sm btn-danger">üóë Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
