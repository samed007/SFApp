@model SFApp.ViewModels.DevolucionesViewModel

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<div class="container-caja mt-4">
    <h2 class="mb-4">Filtrar Transacciones</h2>

    <form method="get" class="row g-3 mb-4">
        <div class="col-md-4">
            <label for="fecha" class="form-label">Filtrar por Fecha</label>
            <input type="date" class="form-control" id="fecha" name="fecha"
                   value="@(Model.Fecha?.ToString("yyyy-MM-dd") ?? "")">
        </div>

        <div class="col-md-4">
            <label for="idTransaccion" class="form-label">Filtrar por ID</label>
            <input type="text" class="form-control" id="idTransaccion" name="idTransaccion"
                   value="@Model.IdTransaccionFiltro">
        </div>

        <div class="col-md-4 d-flex align-items-end">
            <button type="submit" class="btn btn-agregar w-100" title="Filtrar">
                <i class="bi bi-funnel"></i> Filtrar
            </button>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle" id="tablaTransacciones">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Fecha</th>
                    <th>Importe Total</th>
                    <th>Tipo</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model.Transacciones)
                {
                    <tr class="clickable-row" data-href="@Url.Action("Editar", "Devolucion", new { idTransaccion = t.IdTransaccion })" style="cursor:pointer;">
                        <td>@t.IdTransaccion</td>
                        <td>@t.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@t.ImporteTotal.ToString("C")</td>
                        <td>@t.Tipo</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center mt-3">
            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { fecha = Model.Fecha?.ToString("yyyy-MM-dd"), idTransaccion = Model.IdTransaccionFiltro, pageNumber = Model.PageNumber - 1, pageSize = Model.PageSize })" title="Anterior">
                    <i class="bi bi-chevron-left"></i>
                </a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { fecha = Model.Fecha?.ToString("yyyy-MM-dd"), idTransaccion = Model.IdTransaccionFiltro, pageNumber = i, pageSize = Model.PageSize })">
                        @i
                    </a>
                </li>
            }

            <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { fecha = Model.Fecha?.ToString("yyyy-MM-dd"), idTransaccion = Model.IdTransaccionFiltro, pageNumber = Model.PageNumber + 1, pageSize = Model.PageSize })" title="Siguiente">
                    <i class="bi bi-chevron-right"></i>
                </a>
            </li>
        </ul>
    </nav>
</div>


@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".clickable-row").forEach(row => {
                row.addEventListener("click", function () {
                    window.location = this.dataset.href;
                });
            });
        });
    </script>
}
