<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SFApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SFApp.styles.css" asp-append-version="true" />
    
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-light shadow-sm rounded-bottom mb-3 " style="background-color:#489AD4;">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                  <img src="~/assets/logo.jpg" alt="SFApp" height="40" class="d-inline-block align-text-top">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                   

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Producto" asp-action="Index">Productos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Cliente" asp-action="Index">Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Informe" asp-action="Index">Informes</a>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Cobro" asp-action="Index">Cobro</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Entrada" asp-action="Index">Entrada</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Devolucion" asp-action="Index">Devoluciones</a>
                    </li>
                    
                </ul>

                @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav ms-auto align-items-center">
                            <li class="nav-item me-3">
                                <span class="navbar-text fw-semibold text-white text-truncate d-inline-block" style="max-width: 150px;">
                                    @User.Claims.FirstOrDefault(c => c.Type == "CodigoUsuario")?.Value
                                </span>
                            </li>
                            <li class="nav-item">
                                <form asp-area="" asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-gradient-danger">
                                        Cerrar Sesión
                                    </button>
                                </form>
                            </li>
                        </ul>
                    }

            </div>
        </div>
    </nav>
</header>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="footer">
        <div> 
       <a href="https://surferpetscoruna.es/">@@SurferPets 2025</a> 
        </div>
        <div>Desarrollado por 
            <a href="https://hangar93.net">@@HANGAR93</a>
        </div>

        
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
    </html>
